<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".resulActivity"
    android:background="@color/black"

    >



    <LinearLayout


        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="25dp"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical"

        tools:layout_editor_absoluteX="10dp"
        tools:layout_editor_absoluteY="10dp">


        <TextView
            android:id="@+id/view_suma"
            app:cardCornersRadius="50dp"
            android:layout_width="229dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@color/back_button"
            android:gravity="center"
            android:text="@string/button_suma"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/black"
            android:textSize="20dp" />
        <TextView
            android:id="@+id/view_resta"
            android:gravity="center"
            android:textSize="20dp"
            android:layout_width="229dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@color/back_button"
            android:text="@string/button_resta"
            android:textColor="@color/black" />
        <TextView
            android:id="@+id/view_multiplicacion"
            android:gravity="center"
            android:textSize="20dp"
            android:layout_width="229dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@color/back_button"
            android:text="@string/button_multiplicacion"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/view_division"
            android:gravity="center"
            android:textSize="20dp"
            android:layout_width="229dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@color/back_button"
            android:text="@string/button_division"
            android:textColor="@color/black" />





    </LinearLayout>































</androidx.constraintlayout.widget.ConstraintLayout>